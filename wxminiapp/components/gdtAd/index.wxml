<!-- banner广告 -->
<view wx:if="{{adtype==1}}">
	<ad capture-bind:tap="adclick" ad-intervals="30" data-adtype="{{adtype}}" data-position="{{position}}" class="gdtad" unit-id="{{adid}}"></ad>
</view>
<!-- 格子广告 -->
<view wx:elif="{{adtype==3}}">
	<ad capture-bind:tap="adclick" unit-id="{{adid}}" data-adtype="{{adtype}}" data-position="{{position}}" ad-intervals="30" ad-type="grid" grid-opacity="0.8" grid-count="5" ad-theme="black" bindload="gridadsuccess" binderror="gridaderr"></ad>
</view>
<!-- 视频广告 -->
<view wx:elif="{{adtype==4}}">
	<ad capture-bind:tap="adclick" ad-intervals="30"  data-adtype="{{adtype}}" data-position="{{position}}" unit-id="adunit-4289a31678c6d829" ad-type="video" ad-theme="white"></ad>
</view>