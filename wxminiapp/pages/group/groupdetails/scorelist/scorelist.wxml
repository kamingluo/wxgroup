<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}"  wx:if="{{crowd_id}}">
  <view slot="backText">返回</view>
  <view slot="content">积分记录</view>
</cu-custom>



<view class='cu-load load-modal'  wx:if="{{loadModal}}" >
  <image src='../../../../images/common/loading.svg' class='png' mode='aspectFit'></image>
  <view  style='margin-top: 10rpx;'  class='gray-text'>加载中</view>
</view>

  <!-- 广点通视频广告开始-->
  <view class='centered  video-body' wx:if="{{userscorerecord.length > 3}}">
    <view class='gdtad' style="opacity: 0">
      <ad capture-bind:tap="gdtvideoadclick" ad-intervals="30" unit-id="adunit-deda238f6f300a99" ad-type="video" ad-theme="white"></ad>
    </view>
  </view>
  <!--广点通视频广告结束-->

<view>


  <view wx:if="{{userscorerecord.length <= 0}}">
    <view class='default'>
      <view>
        <image src='http://littlebox.luojiaming.vip/default.png'></image>
      </view>
      <view>
        <text>什么都还没有呢</text>
      </view>
    </view>
  </view>

  



  <view wx:else class='top_ba'>
    <view class='top'>
      <view class='top_explain'>
        <text>操作</text>
      </view>
      <view class='top_score'>
        <text>积分数</text>
      </view>
      <view class='top_time'>
        <text>时间</text>
      </view>
    </view>
    <view>
      <view class="bootm" wx:for="{{userscorerecord}}" wx:key="item">
        <view class='bootm_explain'>
          <text>{{item.explain}}</text>
        </view>
        <view class='bootm_score'>
        <text  class='jia' wx:if="{{item.state==0}}">加{{item.score}}</text>
          <text  class='jian' wx:else>减{{item.score}}</text>
        </view>
        <view class='bootm_time'>
          <text>{{item.create_time}}</text>
        </view>
      </view>
    </view>
    <view class='tips'>
      <text>-----已经到底了-----</text>
    </view>
  </view>



</view>



