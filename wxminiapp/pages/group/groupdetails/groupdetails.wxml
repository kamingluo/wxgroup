			<text class="cuIcon-title text-blue"></text><text style="font-weight: 600;">联系客服回复“团购”入团购群</text>
		</view>
		<view class="action" hover-class="none">
			<button class="cu-btn block bg-blue margin-tb-sm round " open-type="contact" session-from='{"nickName":"{{userdata.nickName}}{{userdata.id}}","avatarUrl":"{{userdata.avatarUrl}}"}'>
				<text class="cuIcon-hotfill"></text> 马上进群</button>
		</view>
	</view>
</view>

<view style="margin-top: 5rpx;"  wx:if="{{crowd_id==466 ||crowd_id == 617 }}">
	<view class="cu-bar bg-white solid-bottom">
		<view class="action">
			<text class="cuIcon-title text-blue"></text><text style="font-weight: 600;">火把小助手视频教程</text>
		</view>
		<view class="action" hover-class="none">
			<button class="cu-btn block bg-blue margin-tb-sm round " bindtap="video">
				<text class="cuIcon-hotfill"></text> 点击播放</button>
		</view>
	</view>
</view>

<!-- 签到浮动icon -->
